<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:circularflow_defaultRadius="20sp"
    app:circularflow_radiusInDP="35sp"
    tools:context=".home.HomeActivity"
    android:background="@color/background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/view2"
        class="androidx.appcompat.widget.ActionMenuView"
        android:layout_width="469dp"
        android:layout_height="831dp"
        android:background="#1F91FB"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="210dp"
            android:layout_height="157dp"
            app:srcCompat="@drawable/forma_de_pagamento" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="351dp"
            android:layout_height="106dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Seja bem-vindo \n  à sua carteira digital!  "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="77dp" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="343dp"
            android:layout_height="69dp"
            android:backgroundTint="#FFFFFF"
            android:text="Já sou cadastrado"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/white"
            android:textStyle="bold"
            app:circularflow_defaultRadius="10sp"
            app:cornerRadius="30dp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="558dp" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="343dp"
            android:layout_height="69dp"
            android:backgroundTint="#FEBA0D"
            android:text="Quero me cadastrar"
            android:textStyle="bold"
            app:circularflow_defaultRadius="185sp"
            app:cornerRadius="30dp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="637dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>