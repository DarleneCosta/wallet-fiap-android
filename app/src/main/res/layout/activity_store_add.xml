<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.StoreAddActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@color/purple_200">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="330dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_rounded"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="back"
                android:text="Voltar"
                app:backgroundTint="@color/orange"
                app:icon="@drawable/ic_baseline_west_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="20dp"
                android:text="Selecione a loja que deseja adicionar"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="77dp" />

        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="bottom|center"
            android:textStyle="bold"
            android:theme="@style/ThemeOverlay.MaterialComponents.Light"
            android:background="@drawable/ic_rounded_corner"
            app:searchIcon="@drawable/ic_baseline_search_24"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="258dp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="258dp"

            />



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constLayout"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:strokeColor="@color/purple_200"
                app:strokeWidth="1dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/txtStore"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Nome da Loja"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtPercent"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="99%"
                    android:layout_gravity="center_vertical|right"
                    android:textSize="29sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/txtStore"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/btn_rounded"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:onClick="cancel"
                android:text="cancelar"
                app:backgroundTint="@color/orange"
                app:icon="@drawable/ic_baseline_clear_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />


            <Button
                android:id="@+id/btnAddStore"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/btn_rounded"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:onClick="addStore"
                android:text="Adicionar"
                app:backgroundTint="@color/orange"
                app:icon="@drawable/ic_baseline_check_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <fiap.com.wallet.views.shared.LoadingView
        android:id="@+id/loading_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:visible="false"
        android:layout_height="match_parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>